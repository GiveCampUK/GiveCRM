<Window x:Class="GiveCRM.DummyDataGenerator.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GiveCRM Dummy data generator" Height="275" Width="350">
    <StackPanel Margin="2">
        <Button Margin="2,2,2,12" Click="LoadMembers">Load existing members</Button>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="2">Generate member count:</TextBlock>
            <TextBox Margin="2" MinWidth="60" HorizontalAlignment="Stretch" TextAlignment="Right" 
                     Name="memberCount">10000</TextBox>

        </StackPanel>
        <Button Margin="2,2,2,2" Click="GenerateMembers">Generate members</Button>
        <Separator Margin="6"/>
        <Button Margin="2" Click="GenerateCampaignAndDonations">Generate campaign and donations</Button>
        <Button Margin="2" Click="GenerateCampaign">Generate bare campaign</Button>
        <Button Margin="2" Click="GenerateDonations">Generate donations on last campaign</Button>
        <Border BorderThickness="1" BorderBrush="Black" Margin="2">
            <TextBlock TextWrapping="Wrap" Name="generationOutput"></TextBlock>
        </Border>
    </StackPanel>
</Window>
